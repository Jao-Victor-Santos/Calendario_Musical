<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/_list_image"
            android:src="@drawable/ic_action_image"
            android:scaleType="centerCrop"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:shapeAppearanceOverlay="@style/roudendImageViewRounded"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:id="@+id/_list_names"
            android:text="@string/d1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/_list_image"/>

        <TextView
            android:id="@+id/_list_data"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            android:layout_toEndOf="@+id/_list_image"
            android:gravity="center_vertical"
            android:text="12/12/2023"
            android:textSize="16dp" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>